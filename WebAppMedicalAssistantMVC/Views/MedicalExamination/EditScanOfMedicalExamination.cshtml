@model ScanOfMedicalExaminationModel

@{
    ViewData["Title"] = "Фото исследования";
    Layout = "_Layout";
}

<h4>Редактирование фото исследования</h4>
<div>
    @if (Model.ScanOfMedicalExaminationByte != null)
    {
        <div>
            <img class="rounded mx-auto d-block img-thumbnail m-1 img-fluid" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ScanOfMedicalExaminationByte))" />
        </div>
    }
</div>
<form asp-controller="MedicalExamination" asp-action="EditScanOfMedicalExamination" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="ScanOfMedicalExamination">Добавить изображение</label>
        <input asp-for="ScanOfMedicalExamination" type="file" class="form-control" />
    </div>
    <div>
        <input asp-for="Id" type="hidden" />
    </div>
    <input type="submit" class="btn btn-danger m-1" value="Сохранить" />
    <a class="btn btn-primary m-1" role="button" asp-controller="MedicalExamination" asp-action="Index">Отмена</a>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
