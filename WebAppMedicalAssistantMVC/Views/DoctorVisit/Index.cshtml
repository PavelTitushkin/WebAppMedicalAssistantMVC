@model PagingList<WebAppMedicalAssistant_Core.DTO.DoctorVisitDto>

@{
    ViewData["Title"] = "Мои посещения врачей";
    Layout = "_layout";
}

<h2 class="text-center">Мои посещения врачей</h2>
<div class="text-center">
    <form asp-controller="DoctorVisit" asp-action="Index" method="get">
        <div>
            Дата начала поиска: <input type="date" name="SearchDateStart" value="@DateTime.UtcNow" />
            Дата окончания поиска: <input type="date" name="SearchDateEnd" />
        </div>
        <div class="mb-3">
            <label for="Result" class="form-check-label">Показать посещения за весь период:</label>
            Да<input type="radio" class="form-check-input" name="AllDates" value="false" checked="checked" />
            Нет<input type="radio" class="form-check-input" name="AllDates" value="true" />
        </div>
        <input type="submit" value="Поиск" />
    </form>
</div>

<p>
    <a asp-action="Create">Добавить новое посещение</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Дата посещения
            </th>
            <th>
                Название медицинского учреждения
            </th>
            <th>
                Ф.И.О. врача
            </th>
            <th>
                История болезней
            </th>
            <th>
                Стоимость посещения
            </th>
            <th>
                Назначения
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateVisit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalInstitutionDto.NameMedicalInstitution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorDto.FullNameDoctor)
                </td>
                <td>
                    @if (item.NameOfDisease != null)
                    {
                        <p>
                            @Html.DisplayFor(modelItem => item.NameOfDisease)
                        </p>
                        <p>
                            @Html.ActionLink("Изменить", "Edit", "TransferredDisease", new {idDoctorvisit = item.Id, idTransferredDisease = item.TransferredDiseaseId })
                        </p>
                    }
                    else
                    {
                        @Html.ActionLink("Добавить историю", "Create", "TransferredDisease", new {id = item.Id})
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem=> item.PriceVisit)
                </td>
                <td>
                    @if(item.AppointmentDto!=null)
                    {
                        @Html.ActionLink("Смотреть назначение", "Appointment", "DoctorVisit", new {id = item.Id, nameOfDisease = item.NameOfDisease})
@*                        <a class="link-primary" href="~/DoctorVisit/Appointment/@item.Id?nameOfDisease=@item.NameOfDisease">Смотреть назначение</a>
*@                    }
                    else
                    {
                        @Html.ActionLink("Добавить назначение", "CreateAppointment", "DoctorVisit", new {id = item.Id, nameOfDisease = item.NameOfDisease})
@*                        <a class="link-primary" href="~/DoctorVisit/CreateAppointment/@item.Id">Добавить назначение</a>
*@                    }
                </td>
                <td>
                    <a asp-controller="DoctorVisit" asp-action="Edit" asp-route-id="@item.Id" >Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<nav class="pagination">
    <vc:pager paging-list="@Model" />
</nav>
