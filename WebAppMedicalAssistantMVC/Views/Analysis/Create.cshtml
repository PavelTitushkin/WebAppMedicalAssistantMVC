@model AnalysisModel

@{
    ViewData["Title"] = "Добавить анализ";
    Layout = "_Layout";
}

<div>
    <h2>Добавление нового анализа</h2>

    <form asp-controller="Analysis" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="NameOfAnalysis" class="form-label">Название анализа:</label>
            <input asp-for="NameOfAnalysis" type="text" class="form-control" id="NameOfAnalysis" required />
            <span asp-validation-for="NameOfAnalysis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="DateOfAnalysis" class="form-label">Дата проведения анализа:</label>
            <input asp-for="DateOfAnalysis" type="date" class="form-control" name="Date" required />
            <span asp-validation-for="DateOfAnalysis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="DateOfAnalysis" class="form-label">Время проведения анализа:</label>
            <input asp-for="DateOfAnalysis" type="time" class="form-control" name="Time" required />
            <span asp-validation-for="DateOfAnalysis" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="MedicalInstitutionId" class="form-label">Медицинское учреждение:</label>
            <select asp-for="MedicalInstitutionId" asp-items="@Model.MedicalInstitutionList"></select>
        </div>
        <div>
            <input asp-for="AppointmentId" type="hidden" />
            <input asp-for="ReturnUrl" type="hidden" />
        </div>
        <input type="submit" class="btn btn-primary m-1" value="Добавить анализ" />
        <a class="btn btn-primary m-1" role="button" asp-controller="Analysis" asp-action="Index">Отмена</a>
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
