@model IEnumerable<WebAppMedicalAssistant_Core.DTO.MedicineDto>

@{
    ViewData["Title"] = "Админ";
    Layout = "_AdminLayout";
}

<h2>Лекарства</h2>

<p>
    <a class="btn btn-outline-success" asp-action="AddMedicine">Добавить новое лекарство</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Инструкция
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfMedicine)
                </td>
                <td>
                    @if(!string.IsNullOrEmpty(item.LinkToInstructions))
                    {
                        <a class="m-1" href="@item.LinkToInstructions">Инструкция</a>
                    }
                    else
                    {
                        <p class="m-1">Инструкция отсутсвует</p>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-secondary m-1" asp-controller="Admin" asp-action="ShowEditMedicine" asp-route-id="@item.Id" asp-route-nameMedicine="@item.NameOfMedicine" asp-route-linkToInstructions="@item.LinkToInstructions">Редактировать</a>
                </td>
                <td>
                    <a class="btn btn-outline-danger m-1" asp-controller="Admin" asp-action="ShowDeleteMedicine" asp-route-id="@item.Id" asp-route-nameOfMedicine="@item.NameOfMedicine">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
