<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Medical Assistant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppMedicalAssistantMVC.styles.css" asp-append-version="true" />
</head>
<body>
@*    <header>
    <div class="nav justify-content-center border border-dark border-3 rounded-3 p-3 text-center text-primary m-1 fs-2" style="background-image: url(https://cdn.culture.ru/images/c8abe279-8451-5d6d-9cba-38c35c0ecee9)">
    <a class="nav-link" asp-controller="Home" asp-action="Index">My Medical Assistant</a>
    </div>
    </header>
    *@
    <div class="bg-image" style="background-image: url(https://catherineasquithgallery.com/uploads/posts/2021-02/1614381947_1-p-svetlii-fon-meditsina-1.jpg);">
        <div class="nav justify-content-center border border-dark border-3 rounded-3 p-3 text-center text-primary m-1 fs-2" >
        <a class="nav-link" asp-controller="Home" asp-action="Index">My Medical Assistant</a>
    </div>
        <div class="d-flex m-1 p-1 border border-dark border-2 rounded-3">
        <menu class="justify-content-start p-0 m-1">
            <div class="border-1 rounded-3 p-2 text-center">
                <partial name="_LayoutAccountEmailPartial" />
            </div>
            <ul class="nav nav-pills flex-column nav-justified border border-dark border-2 rounded-3 p-2">
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="DoctorVisit" asp-action="Index">Мои посещения врачей</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="TransferredDisease" asp-action="Index">Моя история болезней</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="Analysis" asp-action="Index">Мои анализы</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="Fluorography" asp-action="Index">Мои флюорографии</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="MedicalExamination" asp-action="Index">Мои медицинские исследования</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="PhysicalTherapy" asp-action="Index">Мои физиотерапии</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="Vaccinacion" asp-action="Index">Мои прививки</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="PrescribedMedication" asp-action="Index">Мои лекарства</a>
                </li>
                <li class="nav-item m-1">
                    <a class="nav-link active" asp-controller="Home" asp-action="GetOrEditUserInfo">Настройки</a>
                </li>
            </ul>
        </menu>
        <div class="ms-2 p-1 border border-dark border-2 rounded-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
        <footer class="border-top footer text-muted">
            <div>
                &copy; 2022 - My Medical Assistant
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/emailUser.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
